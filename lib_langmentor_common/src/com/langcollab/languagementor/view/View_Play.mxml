<view:View_Base xmlns:fx = "http://ns.adobe.com/mxml/2009"
                xmlns:mx = "library://ns.adobe.com/flex/mx"
                xmlns:s = "library://ns.adobe.com/flex/spark"
                xmlns:button = "com.brightworks.component.button.*"
                xmlns:list = "com.brightworks.component.list.*"
                xmlns:swiz = "org.swizframework.core.*"
                xmlns:view = "com.langcollab.languagementor.view.*"
                implements = "com.brightworks.interfaces.IDisposable"
                title = "More"
                viewActivate = "onViewActivate()">

    <fx:Script>
        <![CDATA[
            private var _isDisposed:Boolean = false;

            // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
            //
            //          Public Methods
            //
            // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

            override public function dispose():void
            {
                super.dispose();
                if (_isDisposed)
                    return;
                _isDisposed = true;
            }

            // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
            //
            //          Protected Methods
            //
            // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

            override protected function onCustomGesture_Arrow_Down():void
            {
                textArea.text = "onCustomGesture_Arrow_Down\n" + textArea.text;
            }

            override protected function onCustomGesture_Arrow_Left():void
            {
                textArea.text = "onCustomGesture_Arrow_Left\n" + textArea.text;
            }

            override protected function onCustomGesture_Arrow_Right():void
            {
                textArea.text = "onCustomGesture_Arrow_Right\n" + textArea.text;
            }

            override protected function onCustomGesture_Arrow_Up():void
            {
                textArea.text = "onCustomGesture_Arrow_Up\n" + textArea.text;
            }

            override protected function onCustomGesture_Circle():void
            {
                textArea.text = "onCustomGesture_Circle\n" + textArea.text;
            }

            override protected function onCustomGesture_SwipeDown():void
            {
                textArea.text = "onCustomGesture_SwipeDown\n" + textArea.text;
            }

            override protected function onCustomGesture_SwipeDownLeft():void
            {
                textArea.text = "onCustomGesture_SwipeDownLeft\n" + textArea.text;
            }

            override protected function onCustomGesture_SwipeDownRight():void
            {
                textArea.text = "onCustomGesture_SwipeDownRight\n" + textArea.text;
            }

            override protected function onCustomGesture_SwipeLeft():void
            {
                textArea.text = "onCustomGesture_SwipeLeft\n" + textArea.text;
            }

            override protected function onCustomGesture_SwipeRight():void
            {
                textArea.text = "onCustomGesture_SwipeRight\n" + textArea.text;
            }

            override protected function onCustomGesture_SwipeUp():void
            {
                textArea.text = "onCustomGesture_SwipeUp\n" + textArea.text;
            }

            override protected function onCustomGesture_SwipeUpLeft():void
            {
                textArea.text = "onCustomGesture_SwipeUpLeft\n" + textArea.text;
            }

            override protected function onCustomGesture_SwipeUpRight():void
            {
                textArea.text = "onCustomGesture_SwipeUpRight\n" + textArea.text;
            }

            override protected function onGestureSwipe(message:String = null):void
            {
                textArea.text = message + "\n" + textArea.text;
            }

            override protected function onMouseDown(message:String = null):void
            {
                textArea.text = message + "\n" + textArea.text;
            }

            override protected function onMouseMove(message:String = null):void
            {
                //textArea.text = message + "\n" + textArea.text;
            }

            override protected function onMouseUp(message:String = null):void
            {
                textArea.text = message + "\n" + textArea.text;
            }

            // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
            //
            //          Private Methods
            //
            // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

            private function onViewActivate():void
            {
                isCustomGesturesEnabled = true;
            }
        ]]>
    </fx:Script>

    <s:VGroup height = "100%"
              width = "100%">
        <s:TextArea id = "textArea"
                    editable = "false"
                    height = "100%"
                    width = "100%"
                    paddingBottom = "30"
                    paddingLeft = "30"
                    paddingRight = "30"
                    paddingTop = "30" />
        <button:NormalButton id = "clearButton"
                             label = "Clear"
                             mouseUp = "textArea.text = ''" />
    </s:VGroup>
</view:View_Base>
