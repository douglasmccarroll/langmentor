<view:View_Base xmlns:fx = "http://ns.adobe.com/mxml/2009"
                xmlns:view = "com.langcollab.languagementor.view.*"
                title = "Lesson Downloads"
                viewActivate = "onViewActivate()">

   <fx:Declarations>
   </fx:Declarations>

   <fx:Script>
        <![CDATA[
      import com.brightworks.util.Log;
      import com.brightworks.util.Utils_AIR;

      private var _isDisposed:Boolean = false;

      // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      //
      //          Public Methods
      //
      // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

      override public function dispose():void {
         super.dispose();
         if (_isDisposed)
            return;
         _isDisposed = true;
         viewlet.dispose();
         Utils_AIR.keepSystemAwake(false);
      }

      override public function doGoBack():void {
         Log.info("View_StartLessonDownloads.doGoBack()");
         navigator.popView(transition_SlideView_Right);
         dispose();
      }

      // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      //
      //          Private Methods
      //
      // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

      private function onViewActivate():void {
         Utils_AIR.keepSystemAwake();
      }
      ]]>
    </fx:Script>

   <view:Viewlet_LessonDownloads id = "viewlet"
                                 startLessonDownloads = "true"
                                 height = "100%"
                                 width = "100%"/>
</view:View_Base>
