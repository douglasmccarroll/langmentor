         } else if (model.isAppDualLanguage()) {
            _currentTextDisplayMode = Constant_TextDisplayModes.TEXT_DISPLAY_MODE__INITIAL_EXPLANATION;
         } else {
            if (isTargetPhoneticTextAvailable) {
               _currentTextDisplayMode = Constant_TextDisplayModes.TEXT_DISPLAY_MODE__INITIAL_EXPLANATION;
            } else {
               _currentTextDisplayMode = Constant_TextDisplayModes.TEXT_DISPLAY_MODE__TARGET_TEXT
            }
         }
         if (!currentLessons.currentLessonVO) {
            Log.error("View_PlayLessons.onInitialize(): currentLessons.currentLesson is null");
