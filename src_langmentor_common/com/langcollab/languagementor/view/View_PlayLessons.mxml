            currentIndex++;
         }
         _index_dialogOptionIndexes_to_textDisplayMode[currentIndex] = Constant_TextDisplayModes.TEXT_DISPLAY_MODE__TARGET_TEXT;
         dialogOptionList.push(model.getLessonContentLanguageDisplayName_Target());
         currentIndex++;
         if (model.isAppDualLanguage()) {
            // Lesson includes native text
            _index_dialogOptionIndexes_to_textDisplayMode[currentIndex] = Constant_TextDisplayModes.TEXT_DISPLAY_MODE__NATIVE_TEXT;
            dialogOptionList.push(model.getLessonContentLanguageDisplayName_Native());
         }

         _savedTextDisplayMode = _currentTextDisplayMode;
         _currentTextDisplayMode = Constant_TextDisplayModes.TEXT_DISPLAY_MODE__NONE;
         updateChunkTextTextBoxText();
         _textModeDialogOptionList = dialogOptionList;
         callLater(onChunkTextTextFieldClick_Continued);
      }

